@model ValorDoMinuto

@{
    ViewData["Title"] = "Alterar Valor Do Minuto";
}

<div class="text-center">
    <h1 class="display-4">Alterando Valor</h1>
</div>

<div class="text-left">
    <form asp-controller="ValorDoMinuto" asp-action="Alterar" asp-route-id="@Model.Id" method="post" class="form-horizontal">
        <div class="form-group row">
            <label asp-for="Minutos" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Minutos" class="form-control" id="Minutos" value="@Model.Minutos" />
                <span asp-validation-for="Minutos" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Valor" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Valor" class="form-control" id="Valor" value="@Model.Valor" />
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>
        </div>
        <br />
        <div class="form-group row">
            <div class="col-sm-10 offset-sm-2">
                <button type="submit" class="btn btn-primary">Salvar</button>
            </div>
        </div>
    </form>
</div>