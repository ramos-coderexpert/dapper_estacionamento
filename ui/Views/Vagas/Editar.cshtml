@model Vaga

@{
    ViewData["Title"] = "Alterar Dados da Vaga";
}

<div class="text-center">
    <h1 class="display-4">Alterando Dados da Vaga</h1>
</div>

<div class="text-left">
    <form asp-controller="Vagas" asp-action="Alterar" asp-route-id="@Model.Id" method="post" class="form-horizontal">
        <div class="form-group row">
            <label asp-for="CodigoLocalizacao" class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9">
                <input asp-for="CodigoLocalizacao" class="form-control" id="CodigoLocalizacao" value="@Model.CodigoLocalizacao" />
                <span asp-validation-for="CodigoLocalizacao" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Ocupada" class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9">
                <input asp-for="Ocupada" type="checkbox" id="Ocupada" value="@Model.Ocupada" />
                <span asp-validation-for="Ocupada" class="text-danger"></span>
            </div>
        </div>
        <br />
        <div class="form-group row">
            <div class="col-sm-10 offset-sm-2">
                <button type="submit" class="btn btn-primary">Salvar</button>
            </div>
        </div>
    </form>
</div>