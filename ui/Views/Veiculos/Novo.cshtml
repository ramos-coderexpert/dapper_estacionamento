@model Veiculo

@{
    ViewData["Title"] = "Incluir Veiculo";
}

<div class="text-center">
    <h1 class="display-4">Novo Veiculo</h1>
</div>

<div class="text-left">
    <form asp-controller="Veiculos" asp-action="Criar" method="post" class="form-horizontal">
        <div class="form-group row">
            <label asp-for="Placa" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Placa" class="form-control" id="Placa" />
                <span asp-validation-for="Placa" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Modelo" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Modelo" class="form-control" id="Modelo" />
                <span asp-validation-for="Modelo" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Marca" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Marca" class="form-control" id="Marca" />
                <span asp-validation-for="Marca" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="ClientId" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="ClientId" class="form-control" id="ClientId" />
                <span asp-validation-for="ClientId" class="text-danger"></span>
            </div>
        </div>
        <br />
        <div class="form-group row">
            <div class="col-sm-10 offset-sm-2">
                <button type="submit" class="btn btn-primary">Salvar</button>
            </div>
        </div>
    </form>
</div>