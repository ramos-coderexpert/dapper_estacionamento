@model Veiculo

@{
    ViewData["Title"] = "Alterar Dados do Veiculo";
}

<div class="text-center">
    <h1 class="display-4">Alterando Dados do Veiculo</h1>
</div>

<div class="text-left">
    <form asp-controller="Veiculos" asp-action="Alterar" asp-route-id="@Model.Id" method="post" class="form-horizontal">
        <div class="form-group row">
            <label asp-for="Placa" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Placa" class="form-control" id="Placa" value="@Model.Placa" />
                <span asp-validation-for="Placa" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Modelo" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Modelo" class="form-control" id="Modelo" value="@Model.Modelo" />
                <span asp-validation-for="Modelo" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Marca" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Marca" class="form-control" id="Marca" value="@Model.Marca" />
                <span asp-validation-for="Marca" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="ClientId" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="ClientId" class="form-control" id="Marca" value="@Model.ClientId" />
                <span asp-validation-for="ClientId" class="text-danger"></span>
            </div>
        </div>
        <br />
        <div class="form-group row">
            <div class="col-sm-10 offset-sm-2">
                <button type="submit" class="btn btn-primary">Salvar</button>
            </div>
        </div>
    </form>
</div>