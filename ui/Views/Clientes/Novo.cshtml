@model Cliente

@{
    ViewData["Title"] = "Incluir Cliente";
}

<div class="text-center">
    <h1 class="display-4">Novo Cliente</h1>
</div>

<div class="text-left">
    <form asp-controller="Clientes" asp-action="Criar" method="post" class="form-horizontal">
        <div class="form-group row">
            <label asp-for="Nome" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Cpf" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Cpf" class="form-control" />
                <span asp-validation-for="Cpf" class="text-danger"></span>
            </div>
        </div>
        <br />
        <div class="form-group row">
            <div class="col-sm-10 offset-sm-2">
                <button type="submit" class="btn btn-primary">Salvar</button>
            </div>
        </div>
    </form>
</div>